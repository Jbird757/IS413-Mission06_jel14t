@{
    ViewData["Title"] = "Add a Movie";
    ViewData["Header"] = "Add a Movie";
}

@model IS413_Mission06_jel14t.Models.MovieEntryModel;


<br />
<br />
<div class="justify-content-center align-items-center rounded mx-auto p-3 shadow" style="width: 50%;">
    <form id="movieEntry" method="post">
        <br />
        <div class="form-group">
            <label asp-for="categoryID">*Category:</label>
            <select class="form-control" asp-for="categoryID">
                <option value=''>Select a Category</option>
                @foreach (Category category in ViewBag.Categories)
                {
                    <option value=@category.categoryID>@category.categoryName</option>
                }
            </select>
        </div>
        <div class="form-group">
            <label asp-for="title">*Title:</label>
            <input class="form-control" asp-for="title" />
        </div>

        <div class="form-group">
            <label asp-for="year">*Year Released:</label>
            <input class="form-control" asp-for="year" />
        </div>

        <div class="form-group">
            <label asp-for="director">*Director:</label>
            <input class="form-control" asp-for="director" />
        </div>

        <div class="form-group">
            <label asp-for="rating">*Rating:</label>
            <select class="form-control" asp-for="rating">
                <option value=''>Select a Parental Rating</option>
                <option value="G">G</option>
                <option value="PG">PG</option>
                <option value="PG-13">PG-13</option>
                <option value="R">R</option>
            </select>
        </div>

        <div class="form-check">
            <input type="checkbox" class="form-check-input" asp-for="edited" value="true">
            <label class="form-check-label" asp-for="edited">Edited</label>
        </div>
        <br />
        <div class="form-group">
            <label asp-for="lentTo">Lent To:</label>
            <input class="form-control" asp-for="lentTo" />
        </div>

        <div class="form-group">
            <label asp-for="notes">Notes:</label>
            <textarea class="form-control" asp-for="notes">Enter notes here</textarea>
        </div>
        <p>* Indicates a required field</p>
        <button type="submit" class="btn btn-primary">Create Movie Entry</button>

        <input type="hidden" asp-for="EntryID" />

        <div asp-validation-summary="All"></div>
    </form>
</div>