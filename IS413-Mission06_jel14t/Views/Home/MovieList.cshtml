@{
    ViewData["Title"] = "My Library";
    ViewData["Header"] = "My Library";
    ViewData["SubHeader"] = "Managing your library has never been easier!";
}

@model List<MovieEntryModel>

<div class="justify-content-center align-items-center rounded mx-auto p-3 shadow" style="width: 80%;">
    <table class="table">
        <thead class="thead-light">
            <tr>
                <th scope="col">Title</th>
                <th scope="col">Category</th>
                <th scope="col">Year Released</th>
                <th scope="col">Director</th>
                <th scope="col">Rating</th>
                <th scope="col">Edited</th>
                <th scope="col">Lent To</th>
                <th scope="col">Notes</th>
                <th scope="col"></th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var entry in Model)
            {
                <tr>
                    <th scope="row">@entry.title</th>
                    <td>@entry.Category.categoryName</td>
                    <td>@entry.year</td>
                    <td>@entry.director</td>
                    <td>@entry.rating</td>
                    <td>@entry.edited</td>
                    <td>@entry.lentTo</td>
                    <td>@entry.notes</td>
                    <td><a asp-controller="Home" asp-action="Edit" asp-route-id="@entry.EntryID">Edit</a></td>
                    <td><a asp-controller="Home" asp-action="Delete" asp-route-id="@entry.EntryID">Delete</a></td>
                    <!--<td>
                        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#editModal">
                            Edit
                        </button>
                    </td>
                    <td>
                        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#deleteModal">
                            Delete
                        </button>
                    </td>-->
                </tr>
            }
        </tbody>
    </table>

