@{
    ViewData["Title"] = "Delete";
    ViewData["Header"] = "Delete";
}

@model MovieEntryModel


<div class="justify-content-center align-items-center rounded mx-auto p-3 shadow" style="width: 50%;">
    <div class="justify-content-center align-items-center"> 
        <h2>Confirm Deletion</h2>
        <p>@Model.title will be permanently deleted</p>
    </div>
    
    <form method="post" asp-controller="Home" asp-action="Delete">
        <button type="submit" class="btn btn-danger">Delete</button>
        <a class="btn btn-dark" asp-controller="Home" asp-action="MovieList">Cancel</a>
        <input type="hidden" asp-for="EntryID" />
    </form>
</div>